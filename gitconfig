[merge]
	tool = vimdiff
[color]
  ui = auto
  status = auto
  branch = auto
  grep = auto
[color "branch"]
  current = green reverse
  local = white
  remote = red
[color "diff"]
  plain = white
  meta = yellow
  frag = white reverse
  old = red
  new = green
[color "status"]
  header = white
  added = green 
  changed = red
  untracked = cyan reverse
[branch]
  autosetuprebase = always
[difftool "Kaleidoscope"]
	cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope
[alias]
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  cherry = cherry-pick
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files
  ign = ls-files -o -i --exclude-standard
  logcph = log --author=\"Quorning\" --author=\"Schierbeck\" --author=\"Christiansen\" --author=\"Hvirring\" --author=\"Cannici\" --author=\"Krogh\" --author=\"Hansen\"
  logme = log --author=\"Christiansen\"
  logbenjamin = log --author=\"Quorning\"
  ds = diff --staged
[mergetool]
	keepBackup = true
[rerere]
	enabled = false
[core]
	excludesfile = /Users/jespr/.gitignore
	editor = mvim -f
[push]
